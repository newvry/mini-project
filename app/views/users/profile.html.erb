<div class="container text-center">

<table class = "table">
  <thead>
    <tr>
      <th class="text-center">個人簡介</th>
      <th class="text-center">張貼過的文章</th>
      <th class="text-center">回覆過的評論</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @profile.content %>
      </td>
      <td>
        <% @topics.each do |t| %>
          <%= t.name %><br>
        <% end %>
      </td>
      <td>
        <% @comments.each do |t| %>
          <%= t.content %><br>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

  <%= form_for @profile, url: edit_profile_users_path, method: :put do |t| %>
    <%= t.label :content, "編輯個人簡介" %><br>
    <%= t.text_area :content %><br>
    <%= t.submit %><br>
  <% end %><br>

  <%= link_to "Home", topics_path, :class => "btn btn-primary" %>

</div>

